[diff]
	tool = vimdiff

[merge]
	tool = vimdiff
	conflictstyle = zdiff3

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[pull]
	ff = only
[init]
	defaultBranch = main
[gpg]
	format = ssh
[gpg "ssh"]
	program = /opt/1Password/op-ssh-sign
[commit]
	gpgsign = true
